<div class="white-spacer"></div>
<div class="white-spacer"></div>
<div class="section">
  <h1>Our Thoughts</h1>
  <%= render "shared/butterfly_break" %>
  <div class="white-spacer"></div>
  <div class="posts">
    <% @posts.reverse.each_slice(3) do |posts| %>
      <div class="row justify-content-center">
        <% posts.each do |post| %>
        <div class="col-md-4">
          <div class="post-card">
            <%= link_to post_path(post) do  %>
              <%= cl_image_tag post.banner_photo.key, height: 500, width: 800%>
              <h3><%= link_to post.title, post_path(post), class: "email-phone-blue" %></h3>
              <p><%= post.created_at.strftime("%d %B %Y") %></p>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>
    <div class="white-spacer"></div>
    <p>
      If you would like further information on how we can help you and your company make the most of a new beginning â€“ just call, email or complete the form.
    </p>
    <%= render "shared/butterfly_break" %>
    <% if current_user && current_user.admin? %>
      <%= link_to 'Write a new article', new_post_path %>
    <% end %>
  </div>
</div>

